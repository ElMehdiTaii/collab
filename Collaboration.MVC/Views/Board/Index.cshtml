@{
    ViewBag.pageTitle = "Board";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/assets/libs/dragula/dragula.min.css" />
}

<div class="card">
    <div class="card-body">
        <div class="row g-2">
            <div class="col-lg-auto">
                <div class="hstack gap-2">
                    <button id="btnCreateBoard" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#createboardModal">
                        <i class="ri-add-line align-bottom me-1"></i> Create Board
                    </button>
                </div>
            </div>
            <div class="col-lg-3 col-auto">
                <div class="search-box">
                    <input type="text" class="form-control search" id="search-task-options" placeholder="Search for board">
                    <i class="ri-search-line search-icon"></i>
                </div>
            </div>
            <div class="col-lg-3 col-auto">
                <select id="userList" class="form-select w-100" multiple></select>
            </div>
        </div>
    </div>
</div>

<div id="boardList"></div>

<div class="modal fade" id="createboardModal" tabindex="-1" aria-labelledby="createboardModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content border-0">
            <div class="modal-header p-3 bg-info-subtle">
                <h5 class="modal-title" id="createboardModalLabel">Add Board</h5>
                <button type="button" class="btn-close" id="addBoardBtn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="#" id="createBoardForm">
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="boardTitle" class="form-label">Board Title</label>
                            <input type="text" class="form-control" name="title" id="boardTitle"
                                   placeholder="Enter board name">
                        </div>
                        <div class="col-lg-12">
                            <label for="boardDescription" class="form-label">Board Description</label>
                            <textarea rows="3" type="text" class="form-control" name="description" id="boardDescription"
                                      placeholder="Enter board description"></textarea>
                        </div>
                        <div class="col-lg-12 mt-2">
                            <div class="hstack gap-3 mb-3">
                                <button class="btn btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapsGridReference" aria-expanded="false" aria-controls="collapsGridReference">
                                    <i class=" ri-add-circle-line"></i> Liste des références
                                </button>
                            </div>
                            <div class="collapse" id="collapsGridReference">
                                <div class="card mb-0">
                                    <div class="row">
                                        <div class="col-lg-12 container">
                                            <div class="m-xl-1">
                                                <input type="text" id="searchInput" class="form-control mb-2" placeholder="Search for names, cities...">

                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="checkbox" id="showSelectedOnly">
                                                    <label class="form-check-label" for="showSelectedOnly">Show Selected Only</label>
                                                </div>
                                            </div>

                                            <div class="table-container">
                                                <table class="table table-striped table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Title</th>
                                                            <th>Description</th>
                                                            <th>Status</th>
                                                            <th>Priority</th>
                                                            <th>Start Date</th>
                                                            <th>End Date</th>
                                                            <th>Assigned To</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tableBody">
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <button type="button" class="btn btn-light"
                                    data-bs-dismiss="modal">
                                Close
                            </button>
                            <button type="submit" class="btn btn-success" id="addNewBoard">
                                Add
                                Board
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/assets/libs/dragula/dragula.min.js"></script>
    <script src="~/assets/js/app/board.js"></script>
    <script src="~/assets/libs/dom-autoscroller/dom-autoscroller.min.js"></script>
    <script src="~/assets/js/app.js"></script>
}

<style>
    .table-container {
        height: 300px;
        overflow-y: auto;
        padding: 5px;
    }

        .table-container::-webkit-scrollbar {
            width: 8px;
        }

        .table-container::-webkit-scrollbar-thumb {
            background: #6c757d;
            border-radius: 10px;
        }

        .table-container::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
</style>