
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="container my-5">
        <div class="todo-app shadow-lg p-4 rounded-4 bg-white">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="title text-primary mb-0">Ma Liste de Tâches</h1>
                <button id="addTaskBtn" class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-plus-circle me-2"></i> Ajouter une tâche
                </button>
            </header>
            <div id="taskContainer">
                <ul class="task-list list-unstyled">
                    <li class="task-item d-flex align-items-center justify-content-between py-3 px-3 rounded-3 mb-2">
                        <div class="d-flex align-items-center">
                            <input type="checkbox" class="form-check-input me-3 task-checkbox" id="task1" />
                            <label for="task1" class="form-label mb-0">Tâche d'exemple</label>
                        </div>
                        <button class="delete-task-btn btn btn-outline-danger btn-sm rounded-circle">
                            <i class="bi bi-trash"></i>
                        </button>
                    </li>
                </ul>
                <div id="emptyState" class="text-center py-5" style="display: none;">
                    <h3 class="text-muted">Aucune tâche pour le moment</h3>
                    <p class="text-muted">Ajoute ta première tâche pour commencer 🚀</p>
                </div>
            </div>
        </div>
    </div>

</div>


<style>
    body {
        background-color: #f0f4f8;
        font-family: 'Inter', sans-serif;
        color: #333;
    }

    .todo-app {
        max-width: 600px;
        margin: auto;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.1);
    }

    .title {
        font-size: 1.8rem;
        font-weight: 700;
    }

    #addTaskBtn {
        background: linear-gradient(90deg, #00d2ff, #3a7bd5);
        border: none;
        font-size: 1rem;
        transition: transform 0.2s ease, background 0.3s ease;
    }

        #addTaskBtn:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #3a7bd5, #00d2ff);
        }

    .task-list .task-item {
        background: #f9f9f9;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .task-list .task-item:hover {
            background: #eef2f7;
            transform: scale(1.01);
        }

    .task-list .delete-task-btn {
        border: none;
        color: #ff6b6b;
        transition: transform 0.2s ease, color 0.3s ease;
    }

        .task-list .delete-task-btn:hover {
            transform: scale(1.2);
            color: #ff4d4d;
        }

    .form-check-input {
        transform: scale(1.3);
        cursor: pointer;
        accent-color: #3a7bd5;
    }

    .task-checkbox:checked + label {
        text-decoration: line-through;
        color: #6c757d;
        transition: all 0.3s ease;
    }

</style>